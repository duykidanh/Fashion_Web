@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin-Page</title>
    <link rel="shortcut icon" type="image/png" href="~/ResourceTemplaleAdmin/images/logos/favicon.png" />
    <link rel="stylesheet" href="~/ResourceTemplaleAdmin/css/styles.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <!-- Sidebar Start -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div>
                <div class="brand-logo d-flex align-items-center justify-content-between">
                    <a asp-areas="Admin" asp-controller="DashBoard" asp-action="DashBoard" class="text-nowrap logo-img">
                        <img src="~/ResourceTemplaleAdmin/images/logos/logo.png" width="180" alt="" />
                    </a>
                    <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                        <i class="ti ti-x fs-8"></i>
                    </div>
                </div>
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
                    <ul id="sidebarnav">
                        <li class="nav-small-cap">
                            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                            <span class="hide-menu">Trang chủ</span>
                        </li>
                        <li class="sidebar-item">
                            <a asp-areas="Admin" asp-controller="DashBoard" asp-action="DashBoard" class="sidebar-link" aria-expanded="false">
                                <span>
                                    <i class="ti ti-layout-dashboard"></i>
                                </span>
                                <span class="hide-menu">Tổng Quan</span>
                            </a>
                        </li>
                        <li class="nav-small-cap">
                            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                            <span class="hide-menu">Quản lý sản phẩm</span>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="Admin" asp-controller="SanPham" asp-action="danhmucsanpham" aria-expanded="false">
                                <span>
                                    <i class="ti ti-article"></i>
                                </span>
                                <span class="hide-menu" asp-action="danhmucsanpham">Danh mục sản phẩm</span>
                            </a>
                        </li>
@*                         <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="Admin" asp-controller="TTags" asp-action="index" aria-expanded="false">
                                <span>
                                    <i class="ti ti-article"></i>
                                </span>
                                <span class="hide-menu" asp-action="danhmucsanpham">Bộ sưu tập</span>
                            </a>
                        </li> *@
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="Admin" asp-controller="KhachHang" asp-action="danhsachkhachhang" aria-expanded="false">
                                <span>
                                    <i class="ti ti-alert-circle"></i>
                                </span>
                                <span class="hide-menu">Khách Hàng</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="Admin" asp-controller="NhanVien" asp-action="danhsachnhanvien" aria-expanded="false">
                                <span>
                                    <i class="ti ti-cards"></i>
                                </span>
                                <span class="hide-menu">Nhân Viên</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="HoaDon" asp-action="danhsachhoadon" aria-expanded="false">
                                <span>
                                    <i class="ti ti-file-description"></i>
                                </span>
                                <span class="hide-menu">Hoá Đơn Bán</span>
                            </a>
                        </li>
                        <li class="sidebar-item">

                            <a class="sidebar-link" asp-controller="GiamGia" asp-action="Danhsachmagiamgia" aria-expanded="false">
                                <span>
                                    <i class="ti ti-file-description"></i>
                                </span>
                                <span class="hide-menu">Mã giảm giá</span>
                            </a>
                        </li>

                        @* <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="HeThongCuaHang" asp-action="Index" aria-expanded="false">
                                <span>
                                    <i class="ti ti-file-description"></i>
                                </span>
                                <span class="hide-menu">Hệ Thống Cửa Hàng</span>
                            </a>
                        </li> *@
                    </ul>
                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!--  Sidebar End -->
        <!--  Main wrapper -->
        <div class="body-wrapper">
            <!--  Header Start -->
            <header class="app-header">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <ul class="navbar-nav">
                        <li class="nav-item d-block d-xl-none">
                            <a class="nav-link sidebartoggler nav-icon-hover" id="headerCollapse" href="javascript:void(0)">
                                <i class="ti ti-menu-2"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-icon-hover" href="javascript:void(0)">
                                <i class="ti ti-bell-ringing"></i>
                                <div class="notification bg-primary rounded-circle"></div>
                            </a>
                        </li>
                    </ul>
                    <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
                        <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
                            <li class="nav-item dropdown">
                                <a class="nav-link nav-icon-hover" href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    <img src="~/ResourceTemplaleAdmin/images/profile/user-1.jpg" alt="" width="35" height="35" class="rounded-circle">
                                </a>
                                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                                    <div class="message-body">
                                        <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-user fs-6"></i>
                                            <p class="mb-0 fs-3">Thông tin cá nhân</p>
                                        </a>
                                        <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-mail fs-6"></i>
                                            <p class="mb-0 fs-3">Tài khoản</p>
                                        </a>
                                        <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-list-check fs-6"></i>
                                            <p class="mb-0 fs-3">Nhiệm vụ</p>
                                        </a>
                                        <a id="logout" href="" class="btn btn-outline-primary mx-3 mt-2 d-block">Đăng xuất</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <!--  Header End -->

            <div class="container-fluid">
                <!--  Row 1 -->
                @RenderBody()


                <div class="py-6 px-6 text-center">
                    <p class="mb-0 fs-4">Thiết kế và phát triển bởi <a href="#" target="_blank" class="pe-1 text-primary text-decoration-underline">BeA Incorporation</a></p>
                </div>
            </div>
        </div>
    </div>
    <script src="~/ResourceTemplaleAdmin/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/ResourceTemplaleAdmin/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/ResourceTemplaleAdmin/js/sidebarmenu.js"></script>
    <script src="~/ResourceTemplaleAdmin/js/app.min.js"></script>
    <script type="module" src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/ResourceTemplaleAdmin/js/ChartDashBoard.js"></script>
    <script src="~/ResourceTemplaleAdmin/libs/simplebar/dist/simplebar.js"></script>
    <script>
        $(document).ready(function () {
            $('a#logout').on('click', function (event) {
                event.preventDefault();
                $.ajax({
                    url: '/api/acc/logout',
                    type: 'POST',
                    success: function (response) {
                        location.reload();
                    },
                    error: function (response) {
                        console.log(response);
                    }
                });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
