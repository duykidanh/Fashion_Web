
@{
    ViewData["Title"] = "TimSanPham";
    Layout = "~/Views/Shared/ShopLayout.cshtml";
}


@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Fashion_Web.Models.TDanhMucSp>
<div class="row mb-5">
    @foreach (var m in Model)
    {
        @await Html.PartialAsync("_ProductPartial", m)
    }
</div>
@Html.PagedListPager(Model, page => Url.Action("TimSanPham", new { page = page, TenSanPham = ViewBag.Tensanpham }),
        new X.PagedList.Mvc.Core.PagedListRenderOptions()
    {
        LiElementClasses = new List<String> { "page-item" },
        PageClasses = new List<String> { "page-link" }
    })

