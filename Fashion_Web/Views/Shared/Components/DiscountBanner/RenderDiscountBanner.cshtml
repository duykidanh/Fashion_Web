@model Fashion_Web.ViewModels.DiscountBannerViewModel

<div class="site-section block-8">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 site-section-heading text-center pt-4">
                <h2>Chương trình giảm giá mới nhất!</h2>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col-md-12 col-lg-7 mb-5">
                <a href="#"><img src="~/images/blog_1.jpg" alt="Image placeholder" class="img-fluid rounded"></a>
            </div>
            <div class="col-md-12 col-lg-5 text-center pl-md-5">
                <h3><a href="#">@Model.DiscountPercentage% cho tất cả sản phẩm</a></h3>
                <p class="post-meta mb-4">Giảm giá từ @Model.StartDate đến @Model.EndDate</p>
                <p>@Model.Description</p>
                <p><a asp-controller="Home" asp-action="index" class="btn btn-primary btn-sm">Mua ngay</a></p>
            </div>
        </div>
    </div>
</div>
